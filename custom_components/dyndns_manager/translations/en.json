  "services": {
    "call_update": {
      "name": "Execute DynDNS Update",
      "description": "Calls the update URL of the DynDNS Manager. IPv4/IPv6 will only be sent if the respective checkbox is enabled. If the checkbox is active and the text field is empty, the external address will be determined automatically.",
      "fields": {
        "ha_host": {
          "name": "Home Assistant Host",
          "description": "Optional. Default is the current hostname of Home Assistant."
        },
        "ha_port": {
          "name": "Home Assistant Port",
          "description": "Optional. Default is the current port (usually 8123)."
        },
        "web_username": {
          "name": "Web Username",
          "description": "Web access credentials. If exactly one entry exists, its credentials are automatically used."
        },
        "web_password": {
          "name": "Web Password",
          "description": "Web access credentials. If exactly one entry exists, its credentials are automatically used."
        },
        "timeout": {
          "name": "Timeout",
          "description": "HTTP request timeout in seconds."
        },
        "use_ipv4": {
          "name": "Use IPv4",
          "description": "Enable to send IPv4. If enabled and the field below is empty, the external IPv4 will be determined automatically."
        },
        "ipv4": {
          "name": "IPv4 Address",
          "description": "Optional. Only used if 'Use IPv4' is enabled. Leave empty to automatically determine the external IPv4."
        },
        "use_ipv6": {
          "name": "Use IPv6",
          "description": "Enable to send IPv6. If enabled and the field below is empty, the external IPv6 will be determined automatically."
        },
        "ipv6": {
          "name": "IPv6 Address",
          "description": "Optional. Only used if 'Use IPv6' is enabled. Leave empty to automatically determine the external IPv6."
        }
      }
    }
  }
