  "services": {
    "call_update": {
      "name": "Run DynDNS update",
      "description": "Calls the update URL of the DynDNS Manager. IPv4/IPv6 are only sent if the respective switch is enabled. If enabled and the field is empty, the external address is determined automatically.",
      "fields": {
        "ha_host": {
          "name": "Home Assistant host",
          "description": "Optional. Defaults to the current hostname of Home Assistant."
        },
        "ha_port": {
          "name": "Home Assistant port",
          "description": "Optional. Defaults to the current port (usually 8123)."
        },
        "web_username": {
          "name": "Web username",
          "description": "Web access credentials. If exactly one entry exists, its credentials are used automatically."
        },
        "web_password": {
          "name": "Web password",
          "description": "Web access credentials. If exactly one entry exists, its credentials are used automatically."
        },
        "use_ipv4": {
          "name": "Use IPv4",
          "description": "Enable to send IPv4. If enabled and the field is empty, the external IPv4 is determined automatically."
        },
        "ipv4": {
          "name": "IPv4 address",
          "description": "Optional. Only used when 'Use IPv4' is enabled. Leave empty to determine the external IPv4 automatically."
        },
        "use_ipv6": {
          "name": "Use IPv6",
          "description": "Enable to send IPv6. If enabled and the field is empty, the external IPv6 is determined automatically."
        },
        "ipv6": {
          "name": "IPv6 address",
          "description": "Optional. Only used when 'Use IPv6' is enabled. Leave empty to determine the external IPv6 automatically."
        },
        "timeout": {
          "name": "Timeout",
          "description": "HTTP request timeout in seconds."
        }
      }
    }
  }
